<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="com.google.ar.core.depth" android:required="false"/>
    <uses-feature android:name = "com.google.ar.core" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.ar" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <meta-data android:name="com.google.ar.core" android:value="required" tools:replace="android:value"/>

        <activity
            android:name=".ui.pokedex.PokedexActivity"
            android:exported="false" />

        <!-- ðŸ”¥ SubZoneActivity ë“±ë¡ -->
        <activity
            android:name=".ui.subzone.SubZoneActivity"
            android:exported="false" />

        <!-- ðŸ”¥ TreasureListActivity ë“±ë¡ -->
        <activity
            android:name=".ui.treasure.TreasureListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.ar.ARActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

    </application>

</manifest>
